---
import Footer from './Footer.astro'
import SocialIconsContainer from './SocialIconsContainer.astro'

const iconLinks = [
  {
    icon: 'fa-brands fa-facebook-f',
    href: 'https://www.facebook.com/profile.php?id=61574049239842',
    target: '_blank',
    color: 'var(--primary-text-color)',
    hoverColor: 'var(--secondary-text-color)',
  },
  {
    icon: 'fa-brands fa-instagram',
    href: 'https://www.instagram.com/hovednavn.dk/',
    target: '_blank',
  },
  {
    icon: 'fa-brands fa-spotify',
    href: 'https://open.spotify.com/artist/3OwrJTLlWahORBut7aEXe8',
    target: '_blank',
  },
]
---

<Footer class='absolute bottom-5 left-[50%] -translate-x-[50%]'>
  <SocialIconsContainer
    list={iconLinks}
    class='social-icons-container flex gap-4'
    color={iconLinks[0].color}
    hoverColor={iconLinks[0].hoverColor}
  />
</Footer>

<script>
  import {gsap} from 'gsap'

  gsap.from('.social-icons-container ul li', {
    y: 200,
    duration: 0.6,
    stagger: 0.15,
    delay: 2.1,
    ease: 'power2.out',
  })
</script>
