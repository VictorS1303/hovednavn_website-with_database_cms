---
import Layout from '../layouts/Layout.astro'
import ScrollToTopBtn from '../components/ScrollToTopBtn.astro'
import Section from '../components/Section.astro'
import SectionHeader from '../components/SectionHeader.astro'
import GalleryContainer from '../components/GalleryContainer.astro'
import Main from '../components/Main.astro'
import PageIntroText from '../components/PageIntroText.astro'
import Hero from '../components/Hero.astro'
import Video from '../components/Video.astro'
import PlayButton from '../components/PlayButton.astro'
import {fetchPageIntroTextData} from '../js/supabase'

const navItems = [
  {
    href: '/about',
    text: 'Om',
  },
  {
    href: '/music',
    text: 'Musik',
  },
  {
    href: '/concerts',
    text: 'Koncerter',
  },
  {
    href: '/gallery',
    text: 'Galleri',
  },
]

const pageIntroTextData = await fetchPageIntroTextData()
const galleryIntroText = pageIntroTextData[3]?.page_intro_texts
---

<Layout title='Galleri' navItems={navItems}>
  <Section
    class='h-screen relative flex items-center justify-center'
    id='gallery'>
    <Hero
      heroHeaderText='Galleri'
      heroImageSrc='/images/about/hero/about_hero_bg.webp'
      heroImageAlt='gallery hero image'
      loading='lazy'
    />
  </Section>
  <Main>
    <SectionHeader class='-mb-12' sectionHeaderText='Galleri' />

    <PageIntroText pageIntroText={galleryIntroText} />
  </Main>

  <GalleryContainer />
</Layout>
